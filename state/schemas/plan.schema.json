{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.io/schemas/plan.schema.json",
  "title": "Plan",
  "description": "Task decomposition plan from high-level goal",
  "type": "object",
  "required": [
    "schema_version",
    "plan_id",
    "goal",
    "created_at",
    "status",
    "tasks"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version for migration tracking"
    },
    "plan_id": {
      "type": "string",
      "pattern": "^plan-[a-z0-9]+$",
      "description": "Unique plan identifier"
    },
    "goal": {
      "type": "string",
      "minLength": 1,
      "description": "High-level goal description"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when plan was created"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "completed", "abandoned"],
      "description": "Plan lifecycle status"
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "task_id",
          "title",
          "template",
          "depends_on",
          "estimated_duration_s"
        ],
        "properties": {
          "task_id": {
            "type": "string",
            "pattern": "^task-[0-9]+$",
            "description": "Sequential task identifier"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Task title"
          },
          "template": {
            "type": "string",
            "description": "Prompt template to use"
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^task-[0-9]+$"
            },
            "description": "List of task IDs this task depends on"
          },
          "estimated_duration_s": {
            "type": ["number", "null"],
            "minimum": 0,
            "description": "Estimated duration in seconds from template scores"
          },
          "description": {
            "type": "string",
            "description": "Detailed task description"
          }
        }
      }
    },
    "total_estimated_s": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Sum of all task estimated durations"
    },
    "parallelizable_groups": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^task-[0-9]+$"
        }
      },
      "description": "Tasks grouped by parallelization level (topological sort)"
    }
  }
}
